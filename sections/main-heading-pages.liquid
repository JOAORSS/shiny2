{% assign heading = section.settings.heading %}
<section class="featured-collection section-with-padding color--primary-text bg--primary-background" >
  <div class="max-site-width lg--up--px3">
  <div class="row header">
    <div class="columns">
      {% if heading != blank %}
       <h2 class="f--heading font-size__heading">{{ heading }}</h2>
      {% endif %}
   </div>
  </div>   
    </div> 
</section>

{% schema %}
{
  "name": "Top Heading",
  "class": "section--featured-collection home-featured-pro custom-product-section top-ty",
  "settings": [
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light grey", "value": "light" },
        { "label": "Accent", "value": "accent" }
      ],
      "default": "none"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
    }
  ],
  "presets": [
    {
      "name": "Top Heading",
      "category": "Collection"
    }
  ]
}
{% endschema %}