{% assign heading = section.settings.heading %}
<section class="featured-collection section-with-padding color--primary-text bg--primary-background" >
  <div class="max-site-width lg--up--px3">
  <div class="row header">
    <div class="columns">
      {% if heading != blank %}
       <h2 class="f--heading font-size__heading">{{ heading }}</h2>
      {% endif %}
   </div>
  </div>
  <div class="row content">
    <div
      class="featured-slider-1">
          {% for block in section.blocks %}
            {% assign title = block.settings.title %}
            <div class="icons-row__item">
              <div class="single-items-innerr">
               {% if block.settings.link != blank %}  <a href="{{ block.settings.link  }}">  {% endif %}
                <div class="image-group-custom">
                    {% if block.settings.icon_img != blank %}
                      <div class="main-first-image">
                            <img src="{{ block.settings.icon_img | img_url: 'master' }}" class="f-image">
                      </div>
                      {% endif %}
                      {% if block.settings.icon_img_2 != blank %}
                        <div class="onhover-image">
                            <img src="{{ block.settings.icon_img_2 | img_url: 'master' }}" class="hover-img">
                        </div>
                       {% endif %}
                </div>
              {% if title != blank %}
              <h3 class="product--title">{{ title }}</h3>
              {% endif %}
                 
          {% if block.settings.link != blank %}  </a>  {% endif %}
            </div>
                
              </div>
          {% endfor %}

  </div>
     <div class="center-ad">
      <a class="mt2 inline-block btn" href="{{ section.settings.link }}">{{ section.settings.linktitle }} â‡¢</a>
     </div>
  </div>     
    </div> 
</section>

{% schema %}
{
  "name": "Custom Grid",
  "class": "section--featured-collection home-featured-pro custom-product-section col-grid",
  "settings": [
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light grey", "value": "light" },
        { "label": "Accent", "value": "accent" }
      ],
      "default": "none"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
    },
    {
        "type": "text",
        "id": "linktitle",
        "label": "Link Heading"
    },    
    {
        "type": "url",
        "id": "link",
        "label": "Link"
    }    
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_img",
          "label": "Collection Image"
        },
        {
          "type": "image_picker",
          "id": "icon_img_2",
          "label": "Collection hover Image "
        },
        {
          "type": "text",
          "id": "title",
          "label": "Collection Heading"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Grid",
      "category": "Collection"
    }
  ]
}
{% endschema %}