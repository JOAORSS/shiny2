</div>
        </div>


  </div>
</section>

{% schema %}
  {
    "name": "Tabs Featured collection",
    "class": "tabs-f-collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Tab 1 Collection"
      },
      {
        "id": "collection2",
        "type": "collection",
        "label": "Tab 2 Collection"
      },
      {
        "id": "collection3",
        "type": "collection",
        "label": "Tab 3 Collection"
      },     
      {
         "type": "select",
         "id": "no_products",
         "options": [
            { "value": "3", "label": "3 Products"},
            { "value": "4", "label": "4 Products"},
            { "value": "5", "label": "5 Products"},
            { "value": "8", "label": "8 Products"}
         ],
         "label": "Number of products"
      },
      {
        "id": "subheading",
        "type": "text",
        "label": "Subheading",
        "default": "Use this text to share information about your collection."
      },
      {
        "type": "checkbox",
        "id": "enable_mobile_flickity",
        "label": "Enable horizontal scrolling on mobile",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_collection_link",
        "label": "Show link to collection",
        "default": true
      },
      {
        "type":      "header",
        "content":   "Color"
      },
      {
         "type": "select",
         "id": "color_scheme",
         "label": "Color scheme",
         "options": [
            { "value": "primary", "label": "Primary"},
            { "value": "secondary", "label": "Secondary"},
            { "value": "tertiary", "label": "Tertiary"}
         ]
      }
    ],
    "presets": [
      {
        "name": "Tabs Featured collection",
        "category": "Collection"
      }
    ]
  }

{% endschema %}
