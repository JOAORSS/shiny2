{% assign heading = section.settings.heading %}
<section class="icon-with-tc section-with-padding color--primary-text bg--primary-background" >
  <div class="max-site-width lg--up--px3">
  <div class="row header">
    <div class="columns">
      {% if heading != blank %}
       <h2 class="f--heading font-size__heading">{{ heading }}</h2>
      {% endif %}
   </div>
  </div>
  <div class="row content">
    <div
      class="icons-roww-ytt">
          {% for block in section.blocks %}
            {% assign title = block.settings.title %}
            <div class="icons-row__item">
              <div class="single-items-innerr">
                <div class="image-group-custom">
                    {% if block.settings.icon_img != blank %}
                      <div class="main-first-image">
                            <img src="{{ block.settings.icon_img | img_url: 'master' }}" class="f-image">
                      </div>
                      {% endif %}
                </div>
              {% if title != blank %}
              <h3 class="product--title">{{ title }}</h3>
              {% endif %}
              <div class="rte">
                {{ block.settings.text }}
              </div>
                 
            </div>
                
              </div>
          {% endfor %}

  </div>
  </div>     
    </div> 
</section>

{% schema %}
{
  "name": "Icon with Text",
  "class": "icon-with-text-rww",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_img",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon with Text",
      "category": "icon"
    }
  ]
}
{% endschema %}