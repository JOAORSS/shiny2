{% assign heading = section.settings.heading %}
<section class="custom section-with-padding color--{{ section_color }}-text bg--{{ section_color }}-background" data-section-type="custom" data-section-id="{{ section.id }}">
<div
  class="product-slider-full"
  style="{% render 'framework--background-colors', bg_color: section.settings.background-color %}">
  <div class="row header">
    <div class="columns">
      {% if heading != blank %}
        <h2 class="font--section-heading -hih text-center" data-item="section-heading">{{ heading }}</h2>
      {% endif %}
   </div>
  </div>
  <div class="row content">
    <div
      class="image-slide">
          {% for block in section.blocks %}
            {% assign title = block.settings.title %}
            <div class="icons-row__item">
              <div class="single-items-innerr">
                <div class="image-group-custom">
                    {% if block.settings.icon_img != blank %}
                      <div class="main-first-image">
                            <img src="{{ block.settings.icon_img | img_url: 'master' }}" class="f-image">
                      </div>
                      {% endif %}
                </div>
              {% if title != blank %}
              <h3 class="product--title">{{ title }}</h3>
              {% endif %}
				
            </div>
              </div>
          {% endfor %}
    </div>
  </div>
</div>
  </section>
{% schema %}
{
  "name": "Image slide Section",
  "class": "image-slide-section",
  "settings": [
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light grey", "value": "light" },
        { "label": "Accent", "value": "accent" }
      ],
      "default": "none"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_img",
          "label": "Collection Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image slide Section",
      "category": "Collection"
    }
  ]
}
{% endschema %}